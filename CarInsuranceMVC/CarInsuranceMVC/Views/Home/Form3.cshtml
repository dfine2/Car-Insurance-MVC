
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row no-gutters mb-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow container">
        <div class="card-header text-center">
            <p class="my-auto">Almost there! Just a few more questions.</p>
        </div>
        <div class="card-body position-relative border border-primary pt-5">
            @using (Html.BeginForm("Submit", "Home", FormMethod.Post))
            {
                <div class="form-group row">
                    <div class="form-check-inline mb-3 px-4">
                        <p class="my-auto mr-4">Have you ever gotten a DUI?</p>
                        <input class="form-check-input" type="radio" name="DUI_radios" id="DUI_yes" value="yes" />
                        <label class="form-check-label" for="DUI_yes" value="true"> Yes </label>
                    </div>
                    <div class="form-check-inline mb-3">
                        <input class="form-check-input" type="radio" name="DUI_radios" id="DUI_no" value="no" />
                        <label class="form-check-label" for="DUI_no" value="false"> No </label>
                    </div>
                </div>
                <div class="form-group row px-4 mb-3">
                    <label for="tickets" class="col-9 px-0 mx-0">How many speeding tickets have you received?</label>
                    <input type="number" class="form-control-inline col-2 h-25" id="tickets" name="tickets"/>
                </div>
                <div class="form-group row px-4 mb-3">
                    <label for="coverage" class="col-7 px-0 ml-0 mr-5">Would you like full or liability coverage?</label>
                    <select class="form-control-inline col-2.5 h-25 text-center" id="coverage" name="CoverageType">
                        <option value="Full">Full</option>
                        <option value="Liability">Liability</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="formBtn col-3 btn btn-block btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>

